---
const { type, title, children } = Astro.props;

const types = {
  note: "bg-blue-100 border-blue-300 text-blue-800",
  warning: "bg-yellow-100 border-yellow-300 text-yellow-800",
  danger: "bg-red-100 border-red-300 text-red-800",
};

const style = types[type] || types["note"];
---
<div class={`border-l-4 p-4 rounded ${style}`}>
  <strong>{title || type.charAt(0).toUpperCase() + type.slice(1)}</strong>
  <div>{children}</div>
</div>
